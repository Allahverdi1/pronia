@model Slider
@{
    ViewData["Title"] = "Create";
}
  <div class="container mt-4">
      <h3>Create Slider Section</h3>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
          <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DiscountPercent" class="form-label">DiscountPercent</label>
            <input asp-for="@Model.DiscountPercent" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.DiscountPercent"></span>
        </div>
          <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="slider" asp-action"index">
            <i style="font-size:0.875rem; text-decoration:none;" class="btn btn-dark">Back</i>
        </a>
    </form>
</div>
